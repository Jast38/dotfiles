;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;


[module/memory]
type = internal/memory
internal = 1
format = <label>
label =  %mb_used%

[module/cpu]
type = internal/cpu
internal = 0.5
format =  <label>%
label = %percentage%

[module/date]
type = internal/date
interval = 20
date = %a %d %b
label =%date%  
;label =  %time%
format-padding = 1


[module/time]
type = internal/date
interval = 5
date =
date-alt = " %Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S
format-prefix = 
format-padding = 1
label = %date% %time%

[module/eth]
type = internal/network
interface = enp6s0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = " "
format-connected-suffix = " "
label-connected = %upspeed:2% %downspeed:2%
format-disconnected = <label-disconnected>
label-disconnected = not connected
format-padding = 1

[module/wired-ip]
type = internal/network
interface = enp6s0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected =  %local_ip%
label-disconnected = no connection

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true

enable-click = true
enable-scroll = true
wrapping-scroll = false
reverse-scroll = false
format = <label-state> <label-mode>
label-focused = %name%
label-focused-padding = 3
; Material theme
;llabel-focused-background = "#80cbc4"
;label-focused-foreground = "#212121"

; Gruvbox Material theme
label-focused-background = "#a9b665"
label-focused-foreground = "#32302f"

label-unfocused = %name%
label-unfocused-padding = 3
label-visible = %name%
label-visible-padding = 2
label-mode = %mode%

; Material theme
;label-mode-background = "#eb606b"
;label-mode-foreground = "#212121"

; Gruvbox Material theme
label-mode-background = "#ea6962"
label-mode-foreground = "#32302f"
label-mode-padding = 2
label-urgent = %name%
label-urgent-background = "#ff5050"
label-urgent-foreground = "#32302f"
label-urgent-padding = 3

[module/title]
type = internal/xwindow
format = <label>
label =  %title%
label-maxlen = 20


[module/notifications]
type = custom/text
content = 
click-left = kill -s USR1 $(pidof deadd-notification-center)

[module/menu]
type = custom/text
content =   
click-left = ~/.config/rofi/launchers-git/launcher.sh &
content-padding = 2

[module/separator]
type = custom/text
content =|
content-padding = 0

[module/powermenu]
type = custom/menu

expand-left = true

menu-0-0 = Logout
menu-0-0-exec = i3-msg exit
menu-0-1 = Lock
menu-0-1-exec = exec i3lock-fancy -p
menu-0-2 = Poweroff
menu-0-2-exec = poweroff
menu-0-3 =  Reboot
menu-0-3-exec = reboot
format-spacing = 1 
format-padding = 2

label-open = 
label-close = 

label-separator = |

[module/pulseaudio-control]
type = custom/script
tail = true
label=%output%

exec = ~/.config/polybar/scripts/pulseaudio-control.bash listen
click-right = exec pavucontrol &
click-left = ~/.config/polybar/scripts/pulseaudio-control.bash togmute
click-middle = ~/.config/polybar/scripts/pulseaudio-control.bash next-sink
scroll-up = ~/.config/polybar/scripts/pulseaudio-control.bash up
scroll-down = ~/.config/polybar/scripts/pulseaudio-control.bash down
label-padding = 2

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/scripts/spotify_status.py -f '{artist}: {song}'
format-underline = #1db954

[module/filesystem]
type = internal/fs
mount-0 = /
mount-1 = /home
interval = 30
spacinv = 2
format-mounted = <label-mounted>
format-prefix= ""

label-mounted = %mountpoint% : %percentage_used% % used
label-unmounted = %mountpoint% not mounted

[module/takeabreak]
click-left          = ~/bin/takeabreak/starttakeabreak.sh
click-right         = ~/bin/takeabreak/stoptakeabreak.sh

format-prefix       =

hook-0              = cat ~/bin/takeabreak/sample
hook-1              = echo " Time for a break! "
hook-2              = echo " No timer running "

initial             = 3

type                = custom/ipc
