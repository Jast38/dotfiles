[bar/fullbar]
;monitor = ${env:MONITOR:}
monitor = DP-0
include-file = ~/.config/polybar/fullbar

modules-left = i3 
modules-center = spotify
modules-right = cpu separator  pulseaudio-control separator time date separator powermenu

; Gruvbox material theme
background = #bb32302f
foreground = #dfbf83

[bar/fullbarLeft]
;monitor = ${env:MONITOR:}
monitor = HDMI-0
