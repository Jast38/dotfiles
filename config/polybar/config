modules-left = i3 
modules-center = filesystem
modules-right =  memory separator  wired-ip separator eth separator time date separator powermenu


; Material theme color
;background = #bb212121
;foreground = #c4c7d1

; Gruvbox material theme
background = #bb32302f
foreground = #dfbf83

[bar/fullbarRight]
;monitor = ${env:MONITOR:}
monitor = DVI-I-1
